FROM anapsix/alpine-java:8_jdk
MAINTAINER pere.urbon@acm.org

# Install git
RUN  apk add --no-cache git openssh

ENV PROJECT_HOME /usr/src
ENV PROJECT_NAME api-gateway-app
ENV PROJECT_VERSION 1.1


ENV ARTEFACT target/universal/${PROJECT_NAME}-${PROJECT_VERSION}.zip
COPY ${PROJECT_NAME}/${ARTEFACT} ${PROJECT_HOME}/${PROJECT_NAME}/${PROJECT_NAME}-${PROJECT_VERSION}.zip
RUN cd $PROJECT_HOME/$PROJECT_NAME && unzip ${PROJECT_NAME}-${PROJECT_VERSION}.zip


# Expose code volume and play port 9000

WORKDIR $PROJECT_HOME/$PROJECT_NAME/${PROJECT_NAME}-${PROJECT_VERSION}

ENV APPLICATION_SECRET Q%X57W7Efy
ENV PATH="$PROJECT_HOME/$PROJECT_NAME/${PROJECT_NAME}-${PROJECT_VERSION}:${PATH}"
ENV PLAY_HTTP_PORT ${PLAY_HTTP_PORT:-9000}

CMD ["bin/api-gateway-app"]
